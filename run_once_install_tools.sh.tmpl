#!/bin/bash

# Source the execute_template function
source {{ .chezmoi.sourceDir }}/scripts/execute_template.sh

# Install fzf.sh
{{ .chezmoi.sourceDir }}/scripts/install_fzf.sh

if [ "{{ .install_apt }}" = "true" ]; then
    execute_template install_apt_tools.sh
fi

if [ "{{ .install_dpkg }}" = "true" ]; then
    execute_template install_dpkg_tools.sh
fi

echo "All tools have been checked and installed if necessary."
