#!/bin/bash

# Current host type
CURRENT_HOSTTYPE="{{ .hosttype }}"

check_hosttype() {
    local package_name=$1
    local hosttype=$2

    # If hosttype is empty or not set, install on all environments
    if [ -z "${hosttype}" ] || [ "${hosttype}" = "null" ]; then
        echo "Would install $package_name on $CURRENT_HOSTTYPE environment (all environments)."
        return 0
    fi

    # Convert comma-separated string to array
    IFS=',' read -ra hosttype_array <<< "$hosttype"

    if [[ " ${hosttype_array[@]} " =~ " $CURRENT_HOSTTYPE " ]]; then
        echo "Would install $package_name on $CURRENT_HOSTTYPE environment."
        return 0
    else
        echo "Skipping $package_name installation: not applicable for $CURRENT_HOSTTYPE environment."
        return 1
    fi
}

# You can add more utility functions here

# Export functions if this script is being sourced
if [[ "${BASH_SOURCE[0]}" != "${0}" ]]; then
    export -f check_hosttype
    # Export any other functions you add
fi
